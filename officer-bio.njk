---
pagination:
  data: officers
  size: 1
  alias: officer
permalink: "/officers/{{ officer.id }}/index.html"
layout: base.njk
title: "{{ officer.title }}"
navCurrent: officers
bodyClass: contact-index page--140856 page--contact-index
---

<section class="wvu-breadcrumbs py-2 w-100 position-absolute wvu-z-index-breadcrumbs" aria-label="Breadcrumb Links">
  <div class="container position-relative small">
    <ul class="wvu-z-index-content wvu-slash-list ps-0 mb-0 d-inline-block">
      <li><a href="/">Home</a></li>
      <li><a href="/officers">Officers</a></li>
      <li class="active">{{ officer.title }}</li>
    </ul>
  </div>
</section>

<div class="py-3 wvu-z-index-content pb-3 bg-wvu-neutral--dark-gray bg-wvu-accent--blue-dark wvu-bg-vignetting wvu-bg-blend-mode-luminosity--80 wvu-bg-position-center">
  <div class="container position-relative wvu-z-index-content">
    <div class="row align-items-stretch">
      <div class="col-12 col-md-8 mt-3">
        <h1 id="backpage-header-1-label" class="display-4 helvetica-neue-bold mb-0 text-white">Officers</h1>
      </div>
    </div>
  </div>
</div>

<div class="py-5">
  <div class="container wvu-z-index-content">
    <div class="row">
      <div class="col-md-6 col-lg-5 col-xl-3 mb-1">
        <div class="row">
          <div class="col-xl-10 me-xl-auto">
            <div class="mb-1">
              <img alt="Portrait of ARC {{ officer.title }}" class="card-img-top w-100" src="{{ officer.image }}">
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-7 col-xl-6 wvu-backpage-main">
        <h1 class="display-3 wvu-shout text-wvu-blue wvu-bar wvu-bar--bottom" id="profile-1-label">{{ officer.name }}</h1>
        <div class="helvetica-neue-light">{{ officer.title }}</div>
        {% if officer.callsign or officer.licenseClass %}
        <div class="iowan-old-style-black-italic h3 mt-3">
          <p>{% if officer.callsign %}{{ officer.callsign }}{% endif %}{% if officer.callsign and officer.licenseClass %}, {% endif %}{% if officer.licenseClass %}{{ officer.licenseClass }}{% endif %}</p>
        </div>
        {% endif %}
        <div class="mt-3 text-justify">
          <p>{{ officer.bio }}</p>
        </div>
      </div>
      <aside class="wvu-sidebar col-xl-3 mt-4 mt-md-0" aria-label="wvu-sidebar-1">
        <div class="sticky-top pt-3 mt-n3">
          <div class="mb-3">
            <ul class="nav flex-column border-start border-muted ps-1 mb-3">
              {% for o in officersSorted %}
              <li class="nav-item">
                <a class="nav-link text-decoration-none {% if o.id == officer.id %}active fw-bold{% endif %}" href="/officers/{{ o.id }}">{{ o.title }}</a>
              </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </aside>
    </div>
  </div>
</div>
